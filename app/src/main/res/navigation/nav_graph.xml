<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.architectcoders.equipocinco.ui.MoviesFragment"
        android:label="Movies Fragment">
        <action
            android:id="@+id/action_moviesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.architectcoders.equipocinco.ui.DetailMovieFragment"
        android:label="fragment_detail_mobie"
        tools:layout="@layout/fragment_detail_movie" >
        <deepLink
            android:id="@+id/deepLink"
            app:uri="architectcoders.com/equipo5/{DetailMovieFragment::id}" />
    </fragment>

</navigation>